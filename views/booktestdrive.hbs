{{>user-nav}}

{{#if alert}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}


<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h4>Book-Test-Drive</h4>
          <a href="/user/dashboard" class="btn btn-danger float-end">Back</a>
        </div>
        <div class="card-body">

            {{#each rows}}
          <form
            class="row g-3 needs-validation"
            autocomplete="off"
            ,
            method="post"
            ,
            action="/user/testdrive/{{this.car_id}}"
            ,
           
          >
            <div class="mb-3 col-6">
              <label for="bookingDate" class="form-label">Date</label>
              <input
                type="date"
                name="date"
                class="form-control"
                id="bookingDate"
                

                required
              />
            </div>

            <div class="mb-3 col-6">
              <label for="state" class="form-label">State</label>
              <input
                type="text"
                name="state"
                class="form-control"
                id="state"
                placeholder="Enter Your State"
                required
              />
            </div>

            <div class="mb-3 col-6">
              <label for="city" class="form-label">City</label>
              <input
                type="text"
                name="city"
                class="form-control"
                id="city"
                placeholder="Enter Your city"
                required
              />
            </div>

            <div class="mb-3 col-6">
              <label for="address" class="form-label">Address
                </label>
              <input
                type="text"
                name="address"
                class="form-control"
                id="address"
                placeholder="Enter Your Address"
                required
              />
            </div>

            <div class="mb-3 col-6">
              <label for="pincode" class="form-label">Pin code</label>
              <input
                type="text"
                name="pincode"
                class="form-control"
                id="pincode"
                placeholder="Enter Your Pin Code"
                required
              />
            </div>

          


            <button type="submit" class="btn btn-primary">Book Now</button>
          </form>
            {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>